      <word next="8">walls</word>
      <word next="8">trees</word>
      <word next="8">hills</word>
    </options>
  </sentence>
  <sentence id="8"> <!--Change weapon -->
    <text>The [animal] ran to [to_visit]'s place and ate her. He got into [to_visit]'s [blank]</text>
    <options>
      <word next="9">kitchen</word>
      <word next="9">bed</word>
      <word next="9">clothes</word>
    </options>
